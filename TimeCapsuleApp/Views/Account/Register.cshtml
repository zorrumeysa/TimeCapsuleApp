@{
    ViewBag.Title = "Kayıt Ol";
}

<h2 class="text-center my-4">Kayıt Ol</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="form-container">
    @using (Html.BeginForm())
    {
        <div class="mb-3">
            <label for="username" class="form-label">Kullanıcı Adı</label>
            @Html.TextBox("username", null, new { @class = "form-control", @placeholder = "Kullanıcı adınızı girin", required = "required" })
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">E-posta</label>
            @Html.TextBox("email", null, new { @class = "form-control", @placeholder = "E-posta adresinizi girin", type = "email", required = "required" })
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Şifre</label>
            @Html.Password("password", null, new { @class = "form-control", @placeholder = "Şifrenizi girin", required = "required" })
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Şifreyi Onaylayın</label>
            @Html.Password("confirmPassword", null, new { @class = "form-control", @placeholder = "Şifrenizi tekrar girin", required = "required" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
    }

    <div class="text-center mt-3">
        @Html.ActionLink("Giriş Yap", "Login", "Account", null, new { @class = "btn btn-outline-secondary w-100" })
    </div>
</div>
